generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  projects Project[]
}


model Project {
  id          String   @id @default(uuid())
  title       String
  description String
  techStack   String
  githubUrl   String?
  liveUrl     String?
  createdAt   DateTime @default(now())

  userId String
  user   User @relation(fields: [userId], references: [id])
}
